!!! 5
%html{:lang => "ja"}
  %head
    %meta{ :charset => "UTF-8" }
    /! Always force latest IE rendering engine or request Chrome Frame
    %meta{ :content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ :content => "#{page_keyword}", :name => "description"}
    %meta{ :content => "#{page_description}", :name => "keyword" }
    %link{ :href => "/favicon.ico", :rel => "shortcut icon", :sizes => "16x16", :type => "image/vnd.microsoft.icon"}
    %link{ :href => "/touchicon.png", :rel => "apple-touch-icon-precomposed"}
    %title
      = page_title
    = stylesheet_link_tag "style"
    = javascript_include_tag "main"
  %body{:class => page_classes}
    = yield

